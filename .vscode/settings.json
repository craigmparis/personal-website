{
  "yaml.schemas": {
    ".vscode/schemas/github-workflow.json": [".github/workflows/*"],
    ".vscode/schemas/github-action.json": [".github/actions/**/action.yml"],
    ".vscode/schemas/markdownlint-config-schema.json": [".markdownlint.yaml"]
  },
  "json.schemas": [
    {
      "fileMatch": [".prettierrc"],
      "url": ".vscode/schemas/prettierrc.json"
    },
    {
      "fileMatch": [".markdownlint.jsonc"],
      "url": ".vscode/schemas/markdownlint-config-schema.json"
    },
    {
      "fileMatch": [".jscpd.json"],
      "url": ".vscode/schemas/jscpd.json"
    }
  ],
  "files.associations": {
    ".editorconfig": "Ini"
  }
}
